{
    "name"              : "Add2Cal",
    "version"           : "0.1",
    "manifest_version"  : 2,
    "description"       : "Add2Cal - Currently only optimized for the OptiLink scheduling system",
    "icons"             : {
        "16"            : "icon_16.png",
        "48"            : "icon_48.png",
        "128"           : "icon_128.png"
    },
    "browser_action"    : {
        "default_icon"  : "icon.png"
    },
    "background"        : {
        "scripts"       : ["jquery-1.8.2.min.js", "main.js"]
    },
    "content_scripts"   : [{
        "matches"       : ["<all_urls>"],
        "js"            : ["content_script.js"]
    }],
    "permissions"       : ["tabs", "http://*/*"]
}